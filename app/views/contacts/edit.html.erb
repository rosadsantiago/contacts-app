<h1>Edit Contacts</h1>
<%= form_tag "/contacts/#{@contact.id}", method: "patch" do %>
  
  <div class="form-group">
    First_name: <input type="text" class="form-control" value="<%= @contact.first_name %>" name="form_first_name">
  </div>
  <div class="form-group">
    Last_name: <input type="text" class="form-control" value="<%= @contact.last_name %>" name="form_last_name">
  </div>
  <div class="form-group">
    Email: <input type="text" class="form-control" value="<%= @contact.email %>" name="form_email">
  </div>
  <div class="form-group">
    Phone_number: <input type="text" class="form-control" value="<%= @contact.phone_number %>" name="form_phone_number">
  </div>
  <input type="submit" class="btn btn-default"  value="Edit contact">
<% end %>

